  <!DOCTYPE html>
<html>
  <head>
    <title>Akira Inman</title>
    <link rel="stylesheet" href="../stylesheets/project.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body>
    <div class="main-container">
      <div class="images" id="images">
        <ul class="imageList">
          <% project.images.forEach(function(image, i){ %>
            <% if(i===0){ %>
              <li class="imageContainer active" data-image="<%= i %>" id="main-img">
                <img src="<%= project.images[i].replace('projects/', '') %>" alt="" />
              </li>
            <% } else { %>
              <li class="imageContainer below" data-image="<%= i %>">
              <img src="<%= project.images[i].replace('projects/', '') %>" alt="" />
              </li>
            <% } %>
          <% }); %>
        </ul>
      </div>
      <div class="titleBar-main" id="titleBar">
        <a href="#" class="nav previous" id="previous">
          <span class="previousTitle">Prev. Project</span>
          <span class="previousArrow" id="previous"></span>
        </a>
        <h1 class="projectTitle"><%= project.title %></h1>
        <a href="#" class="nav next" id="next">
          <span class="nextArrow" id="next"></span>
          <span class="nextTitle">Next project</span>
        </a>
      </div>
      <ul class="sliderControls">
        <% project.images.forEach(function(image, i){ %>
          <li class="sliderControlLi">
            <span class="sliderControl" id="control<%= i %>">
            </span>
          </li>
        <% }); %>
      </ul>
      <div class="pageFade"></div>
      <div class="info-container">
        <div class="infoTextContainer">
          <div class="innerTextContainer">
            <h3><%= project.title %></h3>
            <p>
              <%= project.description %>
            </p>
          </div>
        </div>
        <a class="info-icon-container">
          <span class="info-icon"></span>
        </a>
      </div>
      <% project.images.forEach(function(image, i){ %>
        <div class="scroller"></div>
      <% }); %>
    </div>
    <script type="text/javascript" src="../scripts/scripts.js"></script>
  </body>
</html>
